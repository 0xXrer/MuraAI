{
  "name": "MuraAI - Preserving Cultural Heritage",
  "short_name": "MuraAI",
  "description": "AI-powered platform for preserving and exploring cultural heritage of Kazakhstan",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#ffffff",
  "orientation": "any",
  "icons": [
    {
      "src": "/logo.svg",
      "type": "image/svg+xml",
      "sizes": "any",
      "purpose": "any"
    },
    {
      "src": "/logo.svg",
      "type": "image/svg+xml",
      "sizes": "512x512",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/phone-mockup.png",
      "type": "image/png",
      "sizes": "390x844",
      "form_factor": "narrow"
    }
  ],
  "categories": ["education", "culture", "museums"],
  "lang": "ru",
  "dir": "ltr",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "shortcuts": [
    {
      "name": "Explore Catalog",
      "short_name": "Catalog",
      "description": "Browse cultural heritage items",
      "url": "/catalog",
      "icons": [
        {
          "src": "/logo.svg",
          "sizes": "any"
        }
      ]
    },
    {
      "name": "Add Heritage",
      "short_name": "Upload",
      "description": "Add new cultural heritage item",
      "url": "/upload",
      "icons": [
        {
          "src": "/logo.svg",
          "sizes": "any"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "description",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*", "audio/*"]
        }
      ]
    }
  },
  "related_applications": [],
  "prefer_related_applications": false
}
